@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "Crear Cuenta";
    
}
@model Moldes.Usuarios.Usuario
<html lang="es-mx">
    <head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/EstilosLogin.css"/>
    </head>
    <body class="fondo">
        <div class="container my-3">
        <div class="row justify-content-center">
            <div class="col-sm-12 col-md-4 col-lg-4 col-xl-4">
                    <h2>Registro de cuenta</h2>
                    <form>
                    <div class="justify-content-center text-center" id="contenidoregistro">
                            <input id="Nombre" type="text" class="form-control" placeholder="Nombre" asp-for="Nombre"/>
                            <br />
                            <input id="Correo" type="email" class="form-control" placeholder="Correo" asp-for="Correo"/>
                            <br />
                            <input id="Contra" type="password" class="form-control" placeholder="Contraseña" asp-for="Contraseña"/>
                            <br />
                            <input id="Contra2" type="password" class="form-control" placeholder="Contraseña" asp-for="Contraseña"/>
                            <br />
                        <button class="botonmaster" onclick="crearcuenta()">Crear Cuenta</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    @section scripts{
        <script src="~/js/VentanaMensaje.js">
        </script>
    }
    </body>   
</html>
